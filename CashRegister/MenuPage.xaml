<Page x:Class="CashRegister.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CashRegister"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel x:Name="StackPanel_Main" Orientation="Horizontal" Height="65" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,182,0,0">
            <Button Name="Button1" Content="Нове Замовлення" MinWidth="100" Click="BtClickP1" />
            <Button Name="Button2" Content="База Даних" MinWidth="100" Margin="35,0,0,0" Click="BtClickP2"/>
            <Button Name="Button3" Content="Статистика" MinWidth="100" Margin="35,0,0,0" Click="BtClickP3"/>
        </StackPanel>
    </Grid>
</Page>
