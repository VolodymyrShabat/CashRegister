        <Button Grid.Row="1" Grid.Column="0" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Нове замовлення" />

        <Button Grid.Row="1" Grid.Column="1" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Content="База данних" Click="Button_Click2"/>

